<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <TextView
            android:id="@+id/deseas_cerrar_sesion"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Deseas cerrar sesión?"
            android:padding="10dp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:textSize="25sp"/>
       <Button
           android:id="@+id/si"
           android:backgroundTint="#41c559"
           android:layout_below="@+id/deseas_cerrar_sesion"
           android:text="SI"
           android:layout_alignParentStart="true"
           android:layout_marginStart="20dp"
           android:layout_marginBottom="30dp"
           android:background="@drawable/layout_boton_redondeado"
           android:layout_gravity="center"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />
       <Button
           android:id="@+id/no"
           android:backgroundTint="#bb6653"
           android:layout_below="@+id/deseas_cerrar_sesion"
           android:layout_toEndOf="@+id/si"
           android:layout_marginStart="60dp"
           android:layout_marginBottom="30dp"
           android:background="@drawable/layout_boton_redondeado"
           android:text="NO"
           android:layout_gravity="center"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />

</RelativeLayout>
